---

  - name: Test VRP connection
    hosts: vrp

    connection: local
    gather_facts: no
    ignore_errors: yes
    vars:
      cli:
        host: "{{ host}}"
        username: "{{ username }}"
        password: "{{ password }}"
        transport: cli

    tasks:
    - name: "Gather all"
      ce_facts:
        gather_subset: all
        provider: "{{ cli }}"


    - debug:
      msg: "host {{ host }} , username {{ username }}"


configure
 router
  router-id {{ underlay[inventory_hostname]['BGP']['router-id']}}
  autonomous-system {{ underlay[inventory_hostname]['BGP']['ASN']}}
  exit all

configure
  router
{% for item in underlay[inventory_hostname]['interfaces'] %}
  interface {{ item }}
{% if 'system' in item %}
    address {{ underlay[inventory_hostname]['interfaces'][item]['ipv4']}}/{{ underlay[inventory_hostname]['interfaces'][item]['mask']}}
    no shutdown
    exit
{% else %}
    address {{ underlay[inventory_hostname]['interfaces'][item]['ipv4']}}/{{ underlay[inventory_hostname]['interfaces'][item]['mask']}}
    description {{ item }}
    port {{ underlay[inventory_hostname]['interfaces'][item]['port']}}
    no shutdown
    exit 
{% endif %}
{% endfor %}
  exit all

configure
 router
  bgp
    group "iBGP"
    family ipv4 vpn-ipv4
    keepalive 3
    hold-time 10
    next-hop-self
    peer-as {{ underlay[inventory_hostname]['BGP']['ASN']}}
{% for peer in underlay[inventory_hostname]['BGP']['peers'] %}
    neighbor {{ peer }}
      no shutdown
      exit
{% endfor %}
    exit all

configure
  router
    isis 0
      level-capability level-2
      area-id {{ underlay[inventory_hostname]['isis']['area_id']}}
      overload-on-boot timeout 60
      export "direct-isis"
      traffic-engineering
      advertise-router-capability area
      level 1
          wide-metrics-only
      exit
      level 2
          wide-metrics-only
      exit

{% for item in underlay[inventory_hostname]['interfaces'] %}
      interface {{ item }}
{% if 'system' in item %}
        no shutdown
        exit
{% else %}
        level 2               
            metric 10         
        exit   
        no shutdown
        exit 
{% endif %}
{% endfor %}
      no shutdown                      
      exit all          
           
configure
  router
    mpls
{% for item in underlay[inventory_hostname]['interfaces'] %}
      interface {{ item }}
        no shutdown
        exit
{% endfor %}
      no shutdown                      
      exit all  

configure
  router
    ldp
      interface-parameters
{% for item in underlay[inventory_hostname]['interfaces'] %}
{% if not 'system' in item %}
          interface {{ item }} dual-stack
            ipv4
              no shutdown
              exit
            no shutdown
          exit
{% endif %}
{% endfor %}
        exit
        targeted-session
        exit
        no shutdown   
        exit all
